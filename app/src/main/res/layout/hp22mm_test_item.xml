<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_margin="10dp"
    android:orientation="vertical"  >

    <LinearLayout
        android:id="@+id/hp22mm_test_sel_btn_area"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:visibility="gone"
        android:orientation="horizontal"  >
        <LinearLayout
            android:id="@+id/hp22mm_test_ids_btn_area"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:layout_marginLeft="30dp"
            android:layout_marginRight="30dp"
            android:background="@color/white"
            android:orientation="horizontal"  >
            <TextView
                android:id="@+id/hp22mm_test_ids1_btn"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:layout_margin="1dp"
                android:padding="5dp"
                android:textSize="30sp"
                android:textColor="@color/black"
                android:text="@string/str_btn_ids1"
                android:gravity="center" />
            <TextView
                android:id="@+id/hp22mm_test_ids0_btn"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:layout_margin="1dp"
                android:padding="5dp"
                android:textSize="30sp"
                android:textColor="@color/black"
                android:text="@string/str_btn_ids0"
                android:gravity="center" />
        </LinearLayout>
        <LinearLayout
            android:id="@+id/hp22mm_test_pen_btn_area"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:layout_marginLeft="30dp"
            android:layout_marginRight="30dp"
            android:background="@color/white"
            android:orientation="horizontal"  >
            <TextView
                android:id="@+id/hp22mm_test_pen1_btn"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:layout_margin="1dp"
                android:padding="5dp"
                android:textSize="30sp"
                android:textColor="@color/black"
                android:text="@string/str_btn_header2"
                android:gravity="center" />
            <TextView
                android:id="@+id/hp22mm_test_pen0_btn"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:layout_margin="1dp"
                android:padding="5dp"
                android:textSize="30sp"
                android:textColor="@color/black"
                android:text="@string/str_btn_header1"
                android:gravity="center" />
        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/hp22mm_test_cmd_btn"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/button_background"
        android:visibility="gone"
        android:orientation="vertical"  >
        <TextView
            android:id="@+id/hp22mm_test_cmd"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingTop="5dp"
            android:paddingBottom="5dp"
            android:gravity="center_vertical"
            android:textSize="30sp"
            android:textColor="@color/black" />
        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="#44000000" />
        <ProgressBar
            android:id="@+id/hp22mm_test_progress_bar"
            android:layout_width="match_parent"
            android:layout_height="30dp"
            android:visibility="gone"
            android:background="@color/transparent"
            style="@android:style/Widget.Holo.ProgressBar.Large" />
        <TextView
            android:id="@+id/hp22mm_test_result"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="2dp"
            android:gravity="left"
            android:text="Result"
            android:textSize="24sp"
            android:textColor="@color/black" />
    </LinearLayout>
</LinearLayout>