<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@android:id/tabhost"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="@color/background"
    >

    <LinearLayout
        android:id="@+id/out_frame"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical" >
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal" >
            <RadioGroup
                android:id="@+id/tab_group"
                android:layout_width="wrap_content"
                android:layout_height="@dimen/top_btn_height"
                android:gravity="center"
                android:orientation="horizontal"
                android:divider="@drawable/divider"
                android:showDividers="middle"
                android:layout_marginTop="0dip">

                <RadioButton
                    android:id="@+id/btn_control"
                    android:layout_width="@dimen/top_btn_width"
                    android:layout_height="fill_parent"
                    android:layout_weight="1"
                    android:background="@drawable/bg_mid_button"
                    android:drawableTop="@drawable/control"
                    android:button="@null"
                    android:checked="true"
                    android:focusable="false"
                    android:gravity="center"
                    android:textColor="@color/tab_color_selector"
                    android:textSize="@dimen/top_btn_textsize" />

                <RadioButton
                    android:id="@+id/btn_edit"
                    android:layout_width="@dimen/top_btn_width"
                    android:layout_height="fill_parent"
                    android:layout_weight="1"
                    android:button="@null"
                    android:gravity="center"
                    android:background="@drawable/bg_mid_button"
                    android:drawableTop="@drawable/edit"
                    android:textColor="@color/tab_color_selector"
                    android:textSize="@dimen/top_btn_textsize"
                    android:focusable="false"
                    />

                <RadioButton
                    android:id="@+id/btn_setting"
                    android:layout_width="@dimen/top_btn_width"
                    android:layout_height="fill_parent"
                    android:layout_weight="1"
                    android:button="@null"
                    android:gravity="center"
                    android:background="@drawable/bg_mid_button"
                    android:drawableTop="@drawable/setting"
                    android:textColor="@color/tab_color_selector"
                    android:textSize="@dimen/top_btn_textsize"
                    android:focusable="false"
                    />

                <RadioButton
                    android:id="@+id/btn_custom"
                    android:layout_width="@dimen/top_btn_width"
                    android:layout_height="fill_parent"
                    android:layout_weight="1"
                    android:button="@null"
                    android:gravity="center"
                    android:background="@drawable/bg_mid_button"
                    android:drawableTop="@drawable/custom_btn"
                    android:textColor="@color/tab_color_selector"
                    android:textSize="@dimen/top_btn_textsize"
                    android:focusable="false"
                    android:visibility="gone"
                    />

                <RadioButton
                    android:id="@+id/btn_Other"
                    android:layout_width="@dimen/top_btn_width"
                    android:layout_height="fill_parent"
                    android:layout_weight="1"
                    android:button="@null"
                    android:gravity="center"
                    android:background="@drawable/bg_mid_button"
                    android:drawableTop="@drawable/right"
                    android:textColor="@color/tab_color_selector"
                    android:textSize="@dimen/top_btn_textsize"
                    android:focusable="false"
                    android:visibility="gone"
                    />
            </RadioGroup>
            <LinearLayout
                android:id="@+id/ctrl_extra"
                android:layout_width="match_parent"
                android:layout_height="@dimen/top_btn_height"
                android:orientation="horizontal"
                >
                <!-- H.M.Wang 2020-6-3 这个完全没有必要，仅仅是为了解决扫码枪扫码时，msg_transfer被自动打开的问题 -->
                <!-- H.M.Wang 2024-9-19 如果二维码文面中包含多个TAB(KeyCode=61)，会产生TAB间的动作行为，导致一层msg_transfer1挡不住，增加msg_transfer2也只能多挡住一层，包含多个TAB键时可能还是会漏 -->
                <!-- 一定不要将该控件设置为Invisible或者gone，否则无法起到阻挡作用 -->
                <ImageButton
                    android:id="@+id/msg_transfer1"
                    android:layout_width="1dp"
                    android:layout_height="@dimen/top_btn_height"
                    android:scaleType="centerInside"
                    android:layout_alignParentRight="true"
                    android:layout_alignParentTop="true"
                    android:layout_marginRight="@dimen/space_5dp"
                    />
                <ImageButton
                    android:id="@+id/msg_transfer2"
                    android:layout_width="1dp"
                    android:layout_height="@dimen/top_btn_height"
                    android:scaleType="centerInside"
                    android:layout_alignParentRight="true"
                    android:layout_alignParentTop="true"
                    android:layout_marginRight="@dimen/space_5dp"
                    />
                <!-- H.M.Wang 2020-8-11 追加时间显示 -->
                <LinearLayout
                    android:id="@+id/time_disp_area"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:orientation="vertical">
                    <TextView
                        android:id="@+id/disp_date"
                        android:layout_width="wrap_content"
                        android:layout_height="0dp"
                        android:layout_weight="1"
                        android:textColor="#000000"
                        android:layout_gravity="center"
                        android:textSize="@dimen/textsize_25sp" />
                    <TextView
                        android:id="@+id/disp_time"
                        android:layout_width="wrap_content"
                        android:layout_height="0dp"
                        android:layout_weight="1"
                        android:textColor="#000000"
                        android:layout_gravity="center"
                        android:textSize="@dimen/textsize_25sp" />
                </LinearLayout>
                <!-- End of H.M.Wang 2020-8-11 追加时间显示 -->


                <!-- H.M.Wang 2020-8-11 转移至Control_Frame
                        <RelativeLayout
                            android:id="@+id/layout_cnt"
                            android:layout_width="match_parent"
                            android:layout_height="@dimen/top_btn_height_half"
                            android:gravity="center"
                            android:layout_toLeftOf="@+id/msg_transfer" >
                            <TextView
                                android:id="@+id/cnt_dw_label"
                                android:layout_width="wrap_content"
                                android:layout_height="match_parent"
                                android:textColor="#000000"
                                android:textSize="25sp"
                                android:text="@string/str_remain_ink" />
                            <TextView
                                android:id="@+id/count_down"
                                android:layout_width="wrap_content"
                                android:layout_height="match_parent"
                                android:layout_toRightOf="@id/cnt_dw_label"
                                android:layout_marginLeft="20dp"
                                android:textColor="#000000"
                                android:textSize="25sp" />
                        </RelativeLayout>
                        <RelativeLayout
                            android:layout_width="match_parent"
                            android:layout_height="@dimen/top_btn_height_half"
                            android:layout_toLeftOf="@+id/msg_transfer"
                            android:layout_below="@id/layout_cnt"
                            android:gravity="center" >
                            <TextView
                                android:id="@+id/cnt_cnter_label"
                                android:layout_width="wrap_content"
                                android:layout_height="match_parent"
                                android:textColor="#000000"
                                android:textSize="25sp"
                                android:text="@string/str_remain_ptimes" />
                            <TextView
                                android:id="@+id/ctrl_counter_view"
                                android:layout_width="wrap_content"
                                android:layout_height="match_parent"
                                android:layout_toRightOf="@id/cnt_cnter_label"
                                android:layout_marginLeft="20dp"
                                android:textColor="#000000"
                                android:textSize="25sp"
                                android:gravity="center" />
                        </RelativeLayout>
                -->
                <ImageButton
                    android:id="@+id/msg_transfer"
                    android:layout_width="@dimen/top_btn_height"
                    android:layout_height="@dimen/top_btn_height"
                    android:src="@drawable/link"
                    android:scaleType="centerInside"
                    android:background="@drawable/bg_small_button"
                    android:layout_marginRight="@dimen/space_5dp"
                    />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/edit_extra"
                android:layout_width="match_parent"
                android:layout_height="@dimen/top_btn_height"
                android:visibility="gone"
                android:orientation="horizontal"
                >
                <TextView
                    android:id="@+id/edit_message_view"
                    android:layout_width="0dp"
                    android:layout_height="40dp"
                    android:layout_weight="1"
                    android:text=""
                    android:textColor="#000000"
                    android:textSize="25sp"
                    android:gravity="center"
                    />

                <TextView
                    android:id="@+id/delete"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:paddingLeft="20dp"
                    android:paddingRight="20dp"
                    android:background="@drawable/bg_small_button"
                    android:text="@string/str_del"
                    android:textSize="25sp"
                    android:textColor="#000000"
                    android:gravity="center"
                    />
                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:visibility="gone"
                    >
                    <RelativeLayout
                        android:id="@+id/btn_page_forward"
                        android:layout_width="120dp"
                        android:layout_height="fill_parent"
                        android:layout_alignParentRight="true"
                        >
                        <ImageView
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:src="@drawable/style_ctrlbtn_bg_small"
                            />
                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:gravity="center"
                            android:textSize="@dimen/ctrlButtonsTextsize_min"
                            android:textColor="#000000"
                            android:text="@string/str_page_backward"
                            />
                    </RelativeLayout>

                    <RelativeLayout
                        android:id="@+id/btn_page_backward"
                        android:layout_width="120dp"
                        android:layout_height="fill_parent"
                        android:layout_toLeftOf="@id/btn_page_backward"
                        android:visibility="gone"
                        >
                        <ImageView
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:src="@drawable/style_ctrlbtn_bg_small"
                            />
                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:gravity="center"
                            android:textSize="@dimen/ctrlButtonsTextsize_min"
                            android:textColor="#000000"
                            android:text="@string/str_page_forward"
                            />
                    </RelativeLayout>
                </RelativeLayout>
            </LinearLayout>

            <RelativeLayout
                android:id="@+id/settings_view"
                android:layout_width="match_parent"
                android:layout_height="@dimen/top_btn_height"
                android:gravity="center_horizontal"
                android:visibility="gone"
                >
                <ImageView
                    android:id="@+id/link_state"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_alignParentRight="true"
                    android:layout_marginTop="10dp"
                    android:src="@drawable/link"
                    android:background="@drawable/bg_small_button"
                    android:visibility="gone"
                    />
                <LinearLayout
                    android:id="@+id/version"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="20dp"
                    android:gravity="center_vertical"
                    android:layout_toLeftOf="@id/link_state"
                    android:orientation="horizontal"
                    >
                    <TextView
                        android:id="@+id/setting_version_key"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/app_version"
                        android:textColor="#000000"
                        android:textSize="25sp"
                        android:singleLine="true"
                        />
                    <TextView
                        android:id="@+id/setting_version"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="#000000"
                        android:textSize="25sp"
                        android:singleLine="true"
                        />
                </LinearLayout>
                <RelativeLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="20dp"
                    android:layout_toLeftOf="@id/link_state"
                    android:layout_below="@id/version"
                    >
                    <TextView
                        android:id="@+id/setting_time_key"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/system_time"
                        android:textColor="#000000"
                        android:textSize="22sp"
                        android:visibility="gone"
                        />
                    <TextView
                        android:id="@+id/setting_ext_view"
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:layout_toRightOf="@id/setting_time_key"
                        android:textColor="#000000"
                        android:textSize="22sp"
                        />
                </RelativeLayout>
            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/custom_extra"
                android:layout_width="match_parent"
                android:layout_height="@dimen/top_btn_height"
                android:visibility="gone"
                >
                <!--
                        <TextView
                            android:id="@+id/quitBtn"
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:layout_alignParentRight="true"
                            android:layout_centerVertical="true"
                            android:padding="15dp"
                            android:textColor="#FFFFFFFF"
                            android:gravity="center"
                            android:text="@string/str_quit"
                            android:textSize="25sp" />
                -->
                <LinearLayout
                    android:id="@+id/time_disp_areac"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:orientation="vertical">
                    <TextView
                        android:id="@+id/disp_datec"
                        android:layout_width="wrap_content"
                        android:layout_height="0dp"
                        android:layout_weight="1"
                        android:textColor="#000000"
                        android:layout_gravity="center"
                        android:textSize="25sp" />
                    <TextView
                        android:id="@+id/disp_timec"
                        android:layout_width="wrap_content"
                        android:layout_height="0dp"
                        android:layout_weight="1"
                        android:textColor="#000000"
                        android:layout_gravity="center"
                        android:textSize="25sp" />
                </LinearLayout>
            </RelativeLayout>
        </LinearLayout>
        <RelativeLayout
            android:id="@+id/tab_content"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent" >
        </RelativeLayout>
    </LinearLayout>

    <TextView
        android:id="@+id/IP_address"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:textColor="#000000"
        android:textSize="@dimen/textsize_25sp"
        android:gravity="center"
        />
    <TextView
        android:id="@+id/code"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:textColor="#000000"
        android:textSize="@dimen/textsize_25sp"
        android:gravity="center"
        />

    <!-- H.M.Wang 2019-12-7 追加两个启动画面 -->
    <!-- H.M.Wang 2023-8-18 将启动页面的两个图片从MainActivity移到WelcomeActivity
    <ImageView
        android:id="@+id/image1s"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scaleType="fitXY"
        android:src="@drawable/load1s" />

    <ImageView
        android:id="@+id/image05s"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scaleType="fitXY"
        android:src="@drawable/black05s" />
    End of H.M.Wang 2023-8-18 将启动页面的两个图片从MainActivity移到WelcomeActivity -->
</RelativeLayout>
