<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/editmultitab"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/background"
    android:clipChildren="false"
    >
    <HorizontalScrollView
        android:id="@+id/edit_layout"
        android:background="@drawable/background"
        android:layout_height="match_parent"
        android:layout_width="match_parent"
        android:layout_above="@+id/buttons_1"
        android:layout_marginTop="10dp"
        android:clipChildren="false"
        >
        <RelativeLayout
            android:id="@+id/edit_view"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:clipChildren="false"
            >

        </RelativeLayout>
    </HorizontalScrollView>
	<include layout="@layout/edit_small_button" 
        android:id="@+id/buttons_1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_above="@+id/buttons_2"
        android:layout_marginTop="10dp"
        />
	
	<include layout="@layout/edit_small_button2" 
        android:id="@+id/buttons_2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="5dp"
        />
</RelativeLayout>
