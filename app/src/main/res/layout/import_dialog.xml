<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:padding="30dp"
    android:background="@color/background"
     >

	<LinearLayout
		android:layout_width="wrap_content"
		android:layout_height="wrap_content"
		android:orientation="horizontal"
		android:background="@color/background"
		>
		<ImageButton
			android:id="@+id/ib_import"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:src="@drawable/usb_to_flash"
			android:background="@drawable/bg_big_button"
			/>

		<ImageButton
			android:id="@+id/ib_export"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:layout_marginLeft="15dp"
			android:src="@drawable/flash_to_usb"
			android:background="@drawable/bg_big_button"
			/>

		<ImageButton
			android:id="@+id/ib_flush"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:layout_marginLeft="15dp"
			android:src="@drawable/usb_to_flash_override"
			android:background="@drawable/bg_big_button"
			/>
	</LinearLayout>

	<RelativeLayout
		android:id="@+id/cancel"
		android:layout_width="match_parent"
		android:layout_height="wrap_content">

		<Button
			android:id="@+id/btn_cancel"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:layout_alignParentRight="true"
			android:background="@drawable/bg_mid_button"
			android:layout_marginTop="10dp"
			android:padding="10dp"
			android:text="@string/str_btn_cancel"
			android:textSize="40sp"/>
	</RelativeLayout>
</LinearLayout>
